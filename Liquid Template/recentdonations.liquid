      <div class="row" id="centeredRow" style="padding-bottom: 30px;">
        {% assign donations = campaign | donations -%}
        {% assign tiers = campaign | term_by_name: 'Cstm10' %}
        {% assign tiers = tiers | split: ", " %}
        {% assign tiersSize = tiers | size %}
        {% assign donorCount = 0 %}

        {% if tiersSize < 4 %}
          {% assign tiers = '5000, 1000, 360, 100' | split: ", " %}
        {% endif %}

        <div class="col-lg-5" style="max-width: 440px;">
    		{% for displayed_Donation_Info in donations limit:16 -%}
    			{% assign msg = displayed_Donation_Info.Message -%}
    			{% assign tier = 'hex-yellow' -%}
    			{% assign amount = displayed_Donation_Info.Amount -%}
    			{% if displayed_Donation_Info.Amount == null -%}
    				{% assign amount = 0 -%}
    			{% endif -%}
    			{% if displayed_Donation_Info.Matched_Times > 1 -%}
    				{% assign amount = amount | times: displayed_Donation_Info.Matched_Times -%}
    			{% endif -%}
    			{% if amount >= tiers[0]-%}
    				{% assign tier = 'dukeorange' -%}
    			{% elsif amount >= tiers[1] -%}
    				{% assign tier = 'dukegreen' -%}
    			{% elsif amount >= tiers[2] -%}
    				{% assign tier = 'duketeal' -%}
    			  {% elsif amount >= tiers[3] -%}
    				{% assign tier = 'dukeblue' -%}
    			  {% else %}
    				{% assign tier = 'dukepurple' -%}
    			{% endif -%}
            <div class="card" id="donorCard">
              <span style="height: 40px;"><img src="https://charity.studio/wp-content/uploads/2020/08/{{tier}}.png" id="donorImg" style="max-height: 30px;" /><h7
                id="donorName">{% if displayed_Donation_Info.Donor_Name != "" and displayed_Donation_Info.Donor_Name != nil %}{{displayed_Donation_Info.Donor_Name}}{% else %}Anonymous{% endif %}</h7>

                {%if msg and msg != '' %}
                  <img src="https://charity.studio/wp-content/uploads/2020/08/icon-comment.png" id="comment" />
                {% else %}
                  <img src="https://charity.studio/wp-content/uploads/2020/08/icon-comment.png" id="comment" style="visibility: hidden;" />
                {% endif %}

                <h7 id="donorAmt" style="margin-left: 0;">{% if amount == 0 %}{% else %}{{amount | money: 2}}{% endif %}</h7></span>
                {%if msg and msg != '' %}<div class="donor-message" style="display: none;"><div>{{msg}}</div></div>{% endif %}
            </div>
            {% assign donorCount = donorCount | plus: 1 %}

            {% if donorCount == 8 %}
              </div>
              <div class="col-lg-5" style="max-width: 440px;">
            {% endif %}
          {% endfor %}

          </div>
      </div>

